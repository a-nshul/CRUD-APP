<h3>{{viewTitle}}</h3>

<form action="/Product" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{Product._id}}">
    <div class="form-group">
        <label>yourName</label>
        <input type="text" class="form-control" name="yourName" placeholder="yourName" value="{{Product.yourName}}">
        <div class="text-danger">
            {{Product.yourNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{Product.email}}">
        <div class="text-danger">
            {{Product.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{Product.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{Product.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/Product/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>